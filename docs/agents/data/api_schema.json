{
  "openapi": "3.0.0",
  "info": {
    "title": "AI.me API",
    "version": "0.1.0"
  },
  "paths": {
    "/documents": {
      "post": {
        "summary": "Process document",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "document_id": {"type": "string"},
                  "content": {"type": "string"},
                  "metadata": {"type": "object"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Document processed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "document_id": {"type": "string"},
                    "graph_version": {"type": "string"},
                    "version_id": {"type": "string"},
                    "status": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "/query": {
      "post": {
        "summary": "Query graph",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {"type": "string"},
                  "graph_id": {"type": "string"},
                  "filters": {"type": "object"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": {"type": "string"},
                    "model": {"type": "string"},
                    "validation": {"type": "object"},
                    "subgraph_size": {"type": "integer"},
                    "query_event_id": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

